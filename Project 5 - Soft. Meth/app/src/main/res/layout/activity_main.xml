<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/donutOrderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="56dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_donuts"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/CoffeeOrderButton"
        android:layout_width="303dp"
        android:layout_height="223dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="30dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/currentOrderButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donutOrderButton"
        app:srcCompat="@drawable/main_coffee"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/currentOrderButton"
        android:layout_width="166dp"
        android:layout_height="166dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="30dp"
        android:adjustViewBounds="true"
        android:baselineAlignBottom="false"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/storeOrderButton"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/main_cart"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/storeOrderButton"
        android:layout_width="166dp"
        android:layout_height="166dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/currentOrderButton"
        app:srcCompat="@drawable/main_store"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>